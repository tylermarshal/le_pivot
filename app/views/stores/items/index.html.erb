<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <title>Shop</title>
</head>
<body>

  <div class="container">
    <div class="row">
      <% @items.each do |item| %>
        <div class="center-block">
          <div class="card border-white" style="width: 15rem;">
            <%= cl_image_tag item.image, class: "card-img-top" %>
            <div class="card-body">
              <center><p><strong><%= item.title %></strong></p>
                <p>Description: <%= item.description %></p>
                <p>Price: <%= number_to_currency(item.price) %></p>
                <% unless item.retired? %>
                  <%= link_to "Add to cart", carts_path(item_id: item.id), method: :post, class: "badge badge-primary" %></center>
            <% else %>
              <div class="badge badge-secondary">
                Retired
              </div>
            <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</body>
