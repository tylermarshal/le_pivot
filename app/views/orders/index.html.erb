<div class="flex-center margin-top-5">
  <h1>Your Order History</h1>
</div>
<div class="container">
  <center>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Order #</th>
          <th>Order Placed</th>
          <th>Order Status</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @user.orders.each do |order| %>
          <tr id="order-<%= order.id %>" class="order">
            <th scope="row"> <%= link_to order.id, order_path(order) %></th>
            <td><%= order.date %></td>
            <td><%= order.status.capitalize %></td>
            <td>$<%= order.total_price %></td>
            <td>
              <%= number_to_currency(order.order_total) %>
          </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </center>
</div>
