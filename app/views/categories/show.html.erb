<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <title><%= @category.title %> Category: Shop Today! | HomeBodies</title>
</head>
<body>
  <div class="flex-center margin-top-5">
    <h1><%= @category.title.capitalize %></h1>
  </div>
  <div class="container">
    <div class="row items text-center">
      <% @category.items.each do |item| %>
        <div class="center-block">
          <div style="width: 15rem;">
            <%= image_tag item.image, class: "card-img-top" %>
            <div class="card-body info-section">
              <p><strong><%= link_to item.title, item_path(item) %></strong></p>
              <p>Price:$ <%= item.price %></p>
              <%= link_to "Add to cart", carts_path(item_id: item.id), method: :post, class: "badge badge-primary" %></center>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</body>
