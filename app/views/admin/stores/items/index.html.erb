<div class="container">
  <%= link_to "Create New Item", new_admin_store_item_path(@store.slug), class: "badge badge-success center" %>
  <div class="row">
    <% @items.each do |item| %>
      <div class="center-block">
        <div class="card border-white" style="width: 7rem;">
          <%= cl_image_tag item.image, class: "card-img-top" %>
          <div class="card-body">
            <center><p class='small'><strong><%= item.title %></strong></p>
              <p>Description: <%= item.description %></p>
              <footer>
                <p class='small'>Price: $<%= item.price %></p>
                <p><%= link_to "Edit", edit_admin_store_item_path(@store.slug, item), class: "badge badge-info"  %></p>
                <% unless item.retired? %>
                  <%= link_to "Add to cart", carts_path(item_id: item.id), method: :post, class: "badge badge-primary" %></center>
          <% else %>
            <div class="badge badge-secondary">
              Retired
            </div>
              </footer>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
